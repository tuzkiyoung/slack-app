{
	"title": {
		"type": "plain_text",
		"text": "App Launcher",
		"emoji": true
	},
	"submit": {
		"type": "plain_text",
		"text": "Launch",
		"emoji": true
	},
	"type": "modal",
	"callback_id": "app-modal",
	"close": {
		"type": "plain_text",
		"text": "Cancel",
		"emoji": true
	},
	"blocks": [
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "*You are about to launch a new app rocket ! :rocket:*"
			}
		},
		{
			"block_id": "return_url",
			"type": "input",
			"label": {
				"type": "plain_text",
				"text": "The Approval Will Be Posted To"
			},
			"element": {
				"action_id": "return_url",
				"type": "conversations_select",
				"default_to_current_conversation": true,
				"response_url_enabled": true
			}
		},
		{
			"type": "input",
			"block_id": "game",
			"element": {
				"type": "static_select",
				"action_id": "game_id",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a game",
					"emoji": true
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Human Fall Flat",
							"emoji": true
						},
						"value": "Human Fall Flat"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Terraria",
							"emoji": true
						},
						"value": "Terraria"
					}
				]
			},
			"label": {
				"type": "plain_text",
				"text": "Game",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "is_online",
			"element": {
				"type": "static_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a Platform",
					"emoji": true
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Production",
							"emoji": true
						},
						"value": "Production"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Preview",
							"emoji": true
						},
						"value": "Preview"
					}
				],
				"action_id": "platform"
			},
			"label": {
				"type": "plain_text",
				"text": "Platform",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "date",
			"element": {
				"type": "datepicker",
				"placeholder": {
					"type": "plain_text",
					"text": "Select a date",
					"emoji": true
				},
				"action_id": "datepicker"
			},
			"label": {
				"type": "plain_text",
				"text": "Date",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "time",
			"element": {
				"type": "timepicker",
				"placeholder": {
					"type": "plain_text",
					"text": "Select time",
					"emoji": true
				},
				"action_id": "timepicker"
			},
			"label": {
				"type": "plain_text",
				"text": "Time",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "additional_comment",
			"element": {
				"type": "plain_text_input",
				"multiline": true,
				"action_id": "comment"
			},
			"label": {
				"type": "plain_text",
				"text": "Detail",
				"emoji": true
			}
		}
	]
}